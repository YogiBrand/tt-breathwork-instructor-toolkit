# Database Configuration
DB_USER=ttuser
DB_PASSWORD=secure_random_password_here
DB_NAME=tt_toolkit
DATABASE_URL=postgresql://ttuser:secure_random_password_here@db:5432/tt_toolkit

# JWT Configuration
JWT_SECRET=another_secure_random_secret_here

# Email Configuration (Optional - for sending codes and notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Application Configuration
NODE_ENV=production
PORT=3000
API_URL=https://toolkit.timvandervliet.com/api
FRONTEND_URL=https://toolkit.timvandervliet.com

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/app/uploads

# PDF Generation Configuration
PDF_TIMEOUT=30000
BROWSER_ARGS=--no-sandbox,--disable-setuid-sandbox

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Security
CORS_ORIGIN=https://toolkit.timvandervliet.com
SECURE_COOKIES=true

# Development overrides (only for local development)
# Custom ports to avoid conflicts with other Docker apps
# NODE_ENV=development
# API_URL=http://localhost:3856/api
# FRONTEND_URL=http://localhost:5287
# CORS_ORIGIN=http://localhost:5287
# SECURE_COOKIES=false

# PORT MAPPING REFERENCE (for development):
# PostgreSQL: 5449 (host) -> 5432 (container)
# Backend API: 3856 (host) -> 3000 (container)
# Frontend: 5287 (host) -> 5173 (container)
# Nginx HTTP: 8167 (host) -> 80 (container)
# Nginx HTTPS: 8443 (host) -> 443 (container)