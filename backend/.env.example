# Node Environment
NODE_ENV=production
PORT=3000

# Database Configuration
DATABASE_URL=postgresql://ttuser:your_secure_password_here@db:5432/tt_toolkit

# JWT Secret (Generate with: openssl rand -base64 32)
JWT_SECRET=your_secure_random_secret_here_minimum_32_characters

# Email Configuration (for sending access codes)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_specific_password

# Application URLs
FRONTEND_URL=https://toolkit.timvandervliet.com
API_URL=https://toolkit.timvandervliet.com/api

# Development URLs (using custom ports to avoid conflicts)
# FRONTEND_URL=http://localhost:5287
# API_URL=http://localhost:3856/api

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Session
SESSION_DURATION=90d
